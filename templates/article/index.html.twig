{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.bootstrap5.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4">Articles</h1>

    <div class="mb-4">
        <a href="{{ path('app_article_new') }}" class="btn btn-success">Créer un article</a>
    </div>

    <table id="articles-table" class="table table-striped table-bordered nowrap" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Catégories</th>
                <th>Commentaires</th>
                <th>Likes</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/responsive.bootstrap5.min.js"></script>
    {{ encore_entry_link_tags('article_list') }}    
    {{ encore_entry_script_tags('article_list') }}
{% endblock %}
