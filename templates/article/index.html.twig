{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="overflow-hidden py-5">
        <h1 class="text-center">BLOG</h1>
        <a class="bg-dark text-beige p-2 rounded-2 text-decoration-none" href="{{ path('app_article_new') }}">Create new</a>
        <div class="d-flex flex-row row row-cols-3 gap-3 pt-5 justify-content-center">
            {% for article in articles %}
                <div class="d-flex flex-column col w-25 p-5 border-1 justify-content-between">
                    <div class="d-flex flex-row">
                        <h4 class="w-50">{{ article.title }}</h4>
                        <p class="h6 w-50 text-end">{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }} </p>
                    </div>
                    <p>{{ article.content }}</p>
                    <div class="text-end">
                        <a class="text-black" href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                        <a class="text-black" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                    </div>
                </div>
            {% else %}
                <div>No records found</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
