{# templates/base_admin.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin{% endblock %}</title>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text><text y='1.3em' x='0.2em' font-size='76' fill='#fff'>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: rgb(58, 90, 64);
            color: white;
            padding: 2rem 1rem;
        }

        .sidebar a {
            color: white;
            display: block;
            padding: 0.5rem 1rem;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .admin-content {
            margin-left: 250px;
            padding: 2rem;
        }
    </style>

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body class="bg-one min-vh-100">
    <div class="sidebar d-flex flex-column">
        <h4 class="text-center mb-4">Admin</h4>
        <a href="{{ path('app_article_index') }}"><i class="bi bi-newspaper me-2"></i>Articles</a>
        <a href="{{ path('app_category_index') }}"><i class="bi bi-tags me-2"></i>Catégories</a>
        <a href="{{ path('app_comment_index') }}"><i class="bi bi-chat-left-text me-2"></i>Commentaires</a>
        <a href="{{ path('app_admin_dashboard') }}"><i class="bi bi-people me-2"></i>Utilisateurs</a>
        <a href="{{ path('app_home') }}"><i class="bi bi-house-door me-2"></i>Retour au site</a>
        <hr>
        <a href="{{ path('app_logout') }}"
           onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
            <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
        </a>
        <form id="logout-form" action="{{ path('app_logout') }}" method="POST" style="display: none;"></form>
    </div>

    <div class="admin-content">
        {% block body %}{% endblock %}
    </div>
</body>
</html>
