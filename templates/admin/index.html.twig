{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <!-- Menu latéral -->
            <div class="list-group mb-4">
                <h5 class="mb-3">Menu d'administration</h5>
                <a href="{{ path('app_admin_dashboard') }}" class="list-group-item list-group-item-action active">Tableau de bord</a>
                <a href="{{ path('app_admin_users') }}" class="list-group-item list-group-item-action">Gestion des utilisateurs</a>
                <a href="{{ path('app_home') }}" class="list-group-item list-group-item-action">Retour au site</a>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Flash messages -->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Tableau de bord -->
            <h2 class="mb-4">Tableau de bord d'administration</h2>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card text-white bg-primary h-100">
                        <div class="card-body">
                            <h5 class="card-title">Utilisateurs</h5>
                            <p class="card-text fs-3">{{ userCount }}</p>
                        </div>
                        <div class="card-footer text-end">
                            <a href="{{ path('app_admin_users') }}" class="text-white text-decoration-underline">Voir les détails</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card text-white bg-success h-100">
                        <div class="card-body">
                            <h5 class="card-title">Utilisateurs vérifiés</h5>
                            <p class="card-text fs-3">{{ verifiedCount }}</p>
                        </div>
                        <div class="card-footer text-end">
                            <a href="{{ path('app_admin_users') }}" class="text-white text-decoration-underline">Voir les détails</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card text-white bg-dark h-100">
                        <div class="card-body">
                            <h5 class="card-title">Administrateurs</h5>
                            <p class="card-text fs-3">{{ adminCount }}</p>
                        </div>
                        <div class="card-footer text-end">
                            <a href="{{ path('app_admin_users') }}" class="text-white text-decoration-underline">Voir les détails</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="mt-5">
                <h4>Actions rapides</h4>
                <a href="{{ path('app_admin_users_new') }}" class="btn btn-outline-primary mt-2">Créer un nouvel utilisateur</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
