{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container py-5 text-center">
    <h1 class="mb-4">Bienvenue sur notre plateforme</h1>

    <p class="lead mb-5">
        Explorez notre application web sécurisée avec authentification, gestion de profil et plus encore.
    </p>

    {% if app.user %}
        <a href="{{ path('app_profile') }}" class="btn btn-primary me-2">Mon profil</a>
    {% endif %}
    
    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Accueil</a>
</div>
{% endblock %}
